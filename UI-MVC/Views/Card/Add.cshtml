@model NewCardViewModel
@{
    Layout = "_Layout";
}

<h1>Add Card</h1>
<form asp-controller="Card" asp-action="Add" method="post" class="mt-3">
    <div class="mb-3 row">
        <label asp-for="@Model.Name" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control">
        </div>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="@Model.Type" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Type" asp-items="@(new SelectList(ViewBag.CardTypes))" class="form-control"></select>
        </div>
        <span asp-validation-for="@Model.Type" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="@Model.CardAbility" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.CardAbility" asp-items="@(new SelectList(ViewBag.CardAbilities))" class="form-control"></select>
        </div>
        <span asp-validation-for="@Model.CardAbility" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="@Model.CardColour" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.CardColour" asp-items="@(new SelectList(ViewBag.CardColours))" class="form-control"></select>
        </div>
        <span asp-validation-for="@Model.CardColour" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="@Model.ManaCost" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.ManaCost" class="form-control">
        </div>
        <span asp-validation-for="@Model.ManaCost" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="@Model.IsFoil" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.IsFoil" type="checkbox" class="form-check-input">
        </div>
        <span asp-validation-for="@Model.IsFoil" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="@Model.Description" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Description" class="form-control">
        </div>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>