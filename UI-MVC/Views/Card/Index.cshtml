@using MTGM.BL.Domain
@model IEnumerable<MTGM.BL.Domain.Card>

@{
    ViewData["Title"] = "All Cards";
}

<div class="container">
    <h1>All Cards</h1>
    <table class="table">
        <tr>
            <th>name</th>
            <th>Type</th>
            <th>CardAbility</th>
            <th>CardColour</th>
            <th>ManaCost</th>
            <th>IsFoil</th>
            <th></th>
        </tr>
        @foreach (Card card in Model)
        {
            <tr>
                <td>@(card.Name ?? "unknown")</td>
                <td>@card.Type.ToString()</td>
                <td>@(card.CardAbility.ToString())</td>
                <td>@card.CardColour.ToString()</td>
                <td>@(card.ManaCost)</td>
                @if (card.IsFoil)
                {
                    <td>yes</td>
                }
                else
                {
                    <td>no</td>   
                }
                <td><a asp-area="" asp-controller="Card" asp-action="Details" asp-route-id="@card.Id">details</a></td>
            </tr>
        }
    </table>
</div>